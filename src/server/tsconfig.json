{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "outDir": "../../dist/server",
    "baseUrl": "../",
    "rootDir": ".",
    "moduleResolution": "node",
    "typeRoots": [
      "../../node_modules/@types/"
    ],
    "types": [
      "node"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "compileOnSave": false,
  "filesGlob": [
    "./*.ts"
  ],
  "exclude": [
    "../../node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "include": [
    "./*.ts"
  ]
}